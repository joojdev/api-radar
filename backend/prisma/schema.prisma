generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Api {
  id Int @id @default(autoincrement())
  domain String
  endpoint String
  accessInterval Int

  logs Log[]

  @@unique([domain, endpoint], name: "unique_domain_endpoint")
}

model Log {
  id Int @id @default(autoincrement())
  statusCode Int
  latency Int
  timestamp DateTime @db.Timestamp() @default(now())
  apiId Int

  api Api @relation(fields: [apiId], references: [id])
}